// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Menu {
  id String @id @default(uuid())
  name String

  categories Category[]
}

model Category {
  id String @id
  name String @unique

  menus Menu[]
  products Product[]
}

model Product {
  id String @id
  hidden Boolean @default(false)
  
  title String
  image String
  description String
  price Float

  categories Category[]
}